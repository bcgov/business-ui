{
  "name": "@sbc-connect/nuxt-business-base",
  "type": "module",
  "version": "0.4.0",
  "repository": "github:bcgov/business-ui",
  "license": "BSD-3-Clause",
  "main": "./nuxt.config.ts",
  "private": false,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nuxi dev .playground --dotenv ../.env",
    "prepare": "nuxt prepare .playground",
    "build": "nuxt build .playground",
    "build:test": "pnpm generate && npx serve .playground/.output/public",
    "generate": "nuxt generate .playground --dotenv ../.env",
    "preview": "npx serve .playground/.output/public",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "pnpm run test:unit; pnpm run test:e2e",
    "test:unit": "vitest run --passWithNoTests",
    "test:unit:watch": "vitest",
    "test:unit:cov": "vitest --dir tests/unit --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "typecheck": "npx nuxt typecheck"
  },
  "dependencies": {
    "@pinia/colada-nuxt": "^0.2.4",
    "@sbc-connect/nuxt-forms": "^0.1.33",
    "@sbc-connect/nuxt-pay": "^0.1.32",
    "http-status-codes": "^2.3.0",
    "iso-3166-2": "^1.0.0",
    "luxon": "^3.7.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "catalog:",
    "@iconify-json/mdi": "catalog:",
    "@sbc-connect/playwright-config": "workspace:*",
    "@sbc-connect/vitest-config": "workspace:*",
    "@types/iso-3166-2": "^1.0.4",
    "@types/luxon": "^3.7.1",
    "nuxt": "catalog:",
    "typescript": "catalog:",
    "vue": "catalog:",
    "vue-router": "catalog:",
    "vue-tsc": "catalog:"
  }
}
